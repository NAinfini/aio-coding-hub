{
  "name": "aio-coding-hub",
  "private": true,
  "version": "0.21.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "typecheck": "tsc -p tsconfig.json",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:unit:watch": "vitest watch",
    "check:no-instant-now-sub": "node scripts/check-no-instant-now-sub.mjs",
    "check:precommit": "pnpm format:check && pnpm typecheck && pnpm check:no-instant-now-sub && pnpm tauri:fmt && pnpm tauri:check && pnpm tauri:clippy",
    "check:prepush": "pnpm test:unit:coverage && pnpm tauri:test",
    "hooks:install": "node scripts/install-git-hooks.mjs",
    "postinstall": "node scripts/install-git-hooks.mjs",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "node scripts/tauri-dev.mjs",
    "tauri:fmt": "cd src-tauri && cargo fmt -- --check",
    "tauri:check": "cd src-tauri && cargo check --locked",
    "tauri:clippy": "cd src-tauri && cargo clippy --all-targets --locked -- -D warnings",
    "tauri:test": "cd src-tauri && cargo test --locked",
    "tauri:build": "node scripts/tauri-build.mjs",
    "tauri:build:mac:arm64": "node scripts/tauri-build.mjs --target aarch64-apple-darwin",
    "tauri:build:mac:x64": "node scripts/tauri-build.mjs --target x86_64-apple-darwin",
    "tauri:build:mac:universal": "node scripts/tauri-build.mjs --target universal-apple-darwin"
  },
  "dependencies": {
    "@codemirror/language": "^6.12.1",
    "@codemirror/legacy-modes": "^6.5.2",
    "@codemirror/state": "^6.5.4",
    "@codemirror/view": "^6.39.12",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@tanstack/react-query": "^5.90.3",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-notification": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "clsx": "^2.1.1",
    "codemirror": "^6.0.2",
    "lucide-react": "^0.562.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.65.0",
    "react-router-dom": "^7.11.0",
    "recharts": "^2.15.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@tauri-apps/cli": "^2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "2.1.9",
    "autoprefixer": "^10.4.23",
    "jsdom": "^25.0.0",
    "msw": "^2.11.6",
    "postcss": "^8.5.6",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.19",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vitest": "^2.0.5"
  }
}
